datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}



model  NewsPreview {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  image       String
  newsUrl     String   @unique
  sourceUrl   String
  content     String
  pubDate     DateTime?
  updatedAt   DateTime @updatedAt
}

model NewsFull {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  image       String  
  pubDate     DateTime?
  sourceUrl   String   
  newsUrl     String   @unique
  content     String
  previewId   String
  createdAt   DateTime @default(now())
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  login     String   @unique
  password  String
  token     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LineItem {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  size             Int[]
  minCPM           Float
  maxCPM           Float
  geo              String
  adType           String
  frequency        Int
  creativePath     String
  createdAt        DateTime @default(now())
}
