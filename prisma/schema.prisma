datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model NewsItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  image     String?  
  pubDate   DateTime?
  sourceUrl     String   
  newsUrl       String   @unique
  shortContent  String?
  fullContent   String?
  createdAt DateTime @default(now())
}